<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <h1 class="text-center login-title">Sign in to continue to Spectrum</h1>
      <div class="account-wall">
        <!--<img class="profile-img" src="../spectrum.psd" alt="">-->
        <%= form_tag(authenticate_users_path) do %>
         <label><%= t('spectrum.general.username') %></label>
          <p><input type="text" class="form-control" name="username"/></p>
          <label><%= t('spectrum.general.password') %></label>
          <p><input type="password" class="form-control" name="password"/></p>
          <button class="btn btn-lg btn-primary btn-block" type="submit"><%= t('spectrum.general.login') %></button>
        <% end %>
      </div>
      <%= link_to t('spectrum.users.create') ,'#', id: "user_reg", class: "text-center new-account" %>
    </div>
  </div>
</div>

<p></p>

<div class="container">
    <div class="row" id="show_reg" style="display: none;">
      <%= render partial:'register' %>
    </div>
</div>

