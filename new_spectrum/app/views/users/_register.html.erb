<div class="col-sm-6 col-md-4 col-md-offset-4">
      <div class="account-wall">

        <%= form_for :user,url: registration_users_path, method: :post  do |f| %>
        <fieldset>
          <legend>Registration Form</legend>
            <div class="control-group">
              <label class="control-label">Name:</label>
              <div class="controls">
                <%= f.text_field :name, placeholder:'Name',class: 'input-large' %>
              </div>
            </div>

            <div class="control-group">
              <label class="control-label">Address:</label>
              <div class="controls">
                <%= f.text_area :address, cols: 15, rows: 5,placeholder:'Address'%>
              </div>
          </div>

          <%= f.submit %>
        </fieldset>
        <% end %>
      </div>
</div>